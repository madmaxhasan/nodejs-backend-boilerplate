# ===================================
# APPLICATION CONFIGURATION
# ===================================

# Environment: development | production | test
NODE_ENV=development

# Server port
PORT=5000

# API URL prefix (e.g., /api/v1)
API_PREFIX=/api/v1


# ===================================
# DATABASE CONFIGURATION
# ===================================

# MongoDB connection string
# Local: mongodb://localhost:27017/boilerplate
# Docker: mongodb://mongo:27017/boilerplate
# Atlas: mongodb+srv://username:password@cluster.mongodb.net/database
MONGODB_URI=mongodb://localhost:27017/boilerplate

# MongoDB connection string for testing (optional)
# Uses in-memory database if not provided
MONGODB_URI_TEST=mongodb://localhost:27017/boilerplate_test


# ===================================
# JWT AUTHENTICATION
# ===================================

# JWT secret for access tokens (min 32 characters)
# Generate: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_ACCESS_SECRET=your-super-secret-access-key-change-this-in-production-min-32-chars

# JWT secret for refresh tokens (min 32 characters)
# Generate: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production-min-32-chars

# Access token expiration (e.g., 15m, 1h, 2d)
JWT_ACCESS_EXPIRATION=15m

# Refresh token expiration (e.g., 7d, 30d, 90d)
JWT_REFRESH_EXPIRATION=7d


# ===================================
# CORS CONFIGURATION
# ===================================

# Allowed origins (comma-separated for multiple origins)
# Single origin: http://localhost:3000
# Multiple origins: http://localhost:3000,https://yourdomain.com
# All origins (not recommended for production): *
CORS_ORIGIN=http://localhost:3000


# ===================================
# RATE LIMITING
# ===================================

# Rate limit window in minutes
RATE_LIMIT_WINDOW=15

# Maximum requests per window
RATE_LIMIT_MAX_REQUESTS=100


# ===================================
# LOGGING
# ===================================

# Log level: fatal | error | warn | info | debug | trace
LOG_LEVEL=info


# ===================================
# OPTIONAL CONFIGURATIONS
# ===================================

# Email service (for future email features)
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USER=your-email@gmail.com
# EMAIL_PASSWORD=your-app-password
# EMAIL_FROM=noreply@yourdomain.com

# Redis (for caching, sessions, queues)
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=

# File upload settings
# MAX_FILE_SIZE=10485760
# UPLOAD_PATH=./uploads

# Frontend URL (for redirects, emails)
# FRONTEND_URL=http://localhost:3000

# AWS S3 (for file storage)
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=

# Sentry (for error tracking)
# SENTRY_DSN=

# Google OAuth (for social login)
# GOOGLE_CLIENT_ID=
# GOOGLE_CLIENT_SECRET=
# GOOGLE_CALLBACK_URL=http://localhost:5000/api/v1/auth/google/callback
